    var initialize = function () {
        var mapContainer = document.getElementById("containerMap");
        var mapProp = {
            center: new vbd.LatLng(14.102783, 109.649506),
            zoom: 5,
            minZoom: 2,

        };

        var map = new vbd.Map(mapContainer, mapProp);
    };

    vbd.event.addDomListener(window, 'load', initialize);
</script>
<script>

    var flag = false;

    const toggleSearch = () => {
        flag = !flag;
        flag ? openNav() : closeNav();
    }

    function openNav() {
        $("#mySidebarSearch").addClass("activeSidebar")
        $("#main").addClass("activeMain")

        flag = true;
    }

    function closeNav() {
        $("#mySidebarSearch").removeClass("activeSidebar")
        $("#main").removeClass("activeMain")
        flag = false;
    }

</script>